#!/bin/sh
#
# Start WiFi connection after boot (non-blocking)
#

DAEMON="wpa_supplicant"
PIDFILE="/var/run/${DAEMON}.pid"

start() {
    # Unblock WiFi and load driver so wlan0 is available when piejam enables network
    rfkill unblock wifi 2>/dev/null || true
    modprobe brcmfmac 2>/dev/null || true
    # wpa_supplicant and DHCP are started on demand by piejam when user enables network
}

stop() {
    printf "Stopping %s: " "$DAEMON"
    start-stop-daemon -K -q -p "$PIDFILE"
    killall -q udhcpc
    echo "OK"
}

restart() {
    stop
    start
}

case "$1" in
    start|stop|restart)
        "$1"
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
esac

exit $?
