# Network features for WiFi and NFS server

# Wireless (should be in base Pi kernel, but ensure enabled)
CONFIG_WIRELESS=y
CONFIG_CFG80211=m
CONFIG_MAC80211=y
CONFIG_BRCMFMAC=m
CONFIG_BRCMFMAC_SDIO=y

# NFS Server (CRITICAL - often missing in minimal kernels)
CONFIG_NFSD=m
CONFIG_NFSD_V3=y
CONFIG_NFSD_V3_ACL=y
CONFIG_NFSD_V4=y

# NFS dependencies
CONFIG_EXPORTFS=y
CONFIG_LOCKD=m
CONFIG_LOCKD_V4=y
CONFIG_NFS_ACL_SUPPORT=m
CONFIG_SUNRPC=m
CONFIG_SUNRPC_GSS=m
CONFIG_NETWORK_FILESYSTEMS=y
